<Page x:Class="ZadanieYLTRO.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZadanieYLTRO"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="341*" ></RowDefinition>
            <RowDefinition Height= "40*" ></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Name="Participated" Content="Я учавствовал ранее" Height="60" Margin="60" Click="ButtonP_Click" ></Button>
            <Button Name="New" Content="Я новый участник" Height="60" Margin="60,40" Click="ButtonNew_Click" ></Button>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Button Name="Login" Content="Login" HorizontalAlignment="Right" Height="40" Width="80" Margin="0,0,10,0" Click="ButtonLogin_Click" ></Button>
        </StackPanel>
    </Grid>
</Page>
